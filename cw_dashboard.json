                    [ "{{ namespace }}", "wrt_queue_len", "volume", "{{ volume }}", "vpsa", "{{ vpsa_host }}" ],
                    [ ".", "rd_queue_len", ".", ".", ".", "." ]
                ]
            }
        },
        {
            "type": "metric",
            "x": 12,
            "y": 12,
            "width": 12,
            "height": 6,
            "properties": {
                "view": "timeSeries",
                "stacked": false,
